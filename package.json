{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build && npm run preview",
    "prepare": "husky",
    "lint": "eslint . && stylelint \"**/*.scss\"",
    "lint:fix": "eslint . --fix && stylelint \"**/*.scss\" --fix",
    "reset": "rm -rf dist && rm -rf node_modules && rm package-lock.json && npm install && npm start",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "pre-commit": "lint-staged && npm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "sass-embedded": "^1.97.0",
    "sinon": "^21.0.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.2.4",
    "vite-plugin-checker": "^0.12.0"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "uuid": "^13.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{scss,css}": "stylelint --fix"
  },
  "engines": {
    "node": ">=24.19"
  }
}
