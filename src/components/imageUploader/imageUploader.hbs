<div class="profile__avatar-section">
  {{#unless isEditable}}
    <div class="profile__avatar-wrapper">
      {{{currentImage}}}
    </div>
  {{/unless}}
  {{#if isEditable}}
    <div class="profile__avatar-wrapper">
      <input
        type="file"
        accept="image/*"
        class="profile__avatar-input"
        id="{{id}}"
      />
      <label for="{{id}}" class="profile__avatar-label">
        {{{currentImage}}}
        <div class="profile__avatar-overlay">
          <span>
            Выбрать
          </span>
        </div>
      </label>
    </div>
  {{/if}}
</div>