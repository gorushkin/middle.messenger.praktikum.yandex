<div class="profile__content profile__content--password">
   {{{profileAvatar}}}
  <h2 class="profile__info-name">
    {{user.first_name}} {{user.second_name}}
  </h2>
   <form class="profile__form">
    <div class="profile__info-section">
      <ul class="profile__info-list">
        {{#each fields}}
        <li class="profile__info-item">
          {{{this}}}
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="profile__info-actions">
      {{{saveButton}}}
    </div>
  </form>
</div>
